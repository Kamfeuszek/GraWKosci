<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/gameAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gra w kości. Autor: Kamil Florczak"
            android:textAlignment="center"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/throwDice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RZUĆ KOŚĆMI" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="13dp">

            <TextView
                android:id="@+id/roll1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:text=" ? "
                android:textSize="45dp"/>
        </GridLayout>
        <TextView
            android:id="@+id/rollResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wynik tego losowania: " />
        <TextView
            android:id="@+id/gameResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wynik gry: " />
        <TextView
            android:id="@+id/throwCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liczba rzutów: 0" />
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESETUJ WYNIK" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>